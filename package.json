{
  "name": "@ruax/ui",
  "version": "0.2.0",
  "description": "a mobile ui helper",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest test.ts --coverage",
    "build": "rm -rf ./lib && tsc && post-build",
    "post-build": "node ./scripts/release/move-dts.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rua-js/rua-ui.git"
  },
  "keywords": [
    "rua",
    "rua.js",
    "ruax",
    "ui",
    "rua-ui"
  ],
  "author": "copydog",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rua-js/rua-ui/issues"
  },
  "homepage": "https://github.com/rua-js/rua-ui#readme",
  "dependencies": {
    "react-native-vector-icons": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/react": "^16.0.38",
    "@types/react-native": "^0.55.14",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.1",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
